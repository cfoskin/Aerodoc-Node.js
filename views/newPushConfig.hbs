<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title> New Push Config
    </title>
    <link href="https://netdna.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
    <body>
        <div class="btn-toolbar">
            <div class="btn-group">
                <a href="/" class="btn btn-primary" id="signout">Sign Out</a>
                 <a href="/leads" class="btn btn-primary" id="pushConfig">Leads </a>
            </div>
        </div>
</head>
<div class="page-header">
    <h3 class="text-center">
       Aerodoc 
      </h3>
</div>
<div class="container" align='center'>
    <div class="panel panel-primary" style="width: 60%">
        <div class="panel-heading">
            <h3 class="panel-title">
            Create a New Push Configuration
          </h3>
        </div>
        <div class="panel-body">
            <form action="/newPushConfig" method="POST">
                <div class="form-group">
                    <label>
                        Push Server URL
                    </label>
                    <input class="form-control" placeholder="Enter Push Server URL" type="text" name="serverURL">
                </div>
                <div class="form-group">
                    <label>
                        Push Application ID
                    </label>
                    <input class="form-control" placeholder="Enter Push App ID" type="text" name="pushApplicationId">
                </div>
                <div class="form-group">
                    <label>
                        Master Secret
                    </label>
                    <input class="form-control" placeholder="Enter Master Secret" type="text" name="masterSecret">
                </div>
                <div class="form-group">
                    <label>
                        Active ?
                        <label class="checkbox">
                        <input type="checkbox" name="active">
                    </label>
                    </label>
                </div>
                    <a href="/pushConfigs" class="btn pull-left btn-warning" id="cancel">Cancel </a>
                    <button type="submit" class="btn pull-right btn-primary" id="newPushConfig">
                        Create Push Config!
                    </button>
                </div>
            </div>
        </form>
</div>
</body>
</html>
